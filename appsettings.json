{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "TcpSettings": {
    "BaseIpAddress": "192.168.1.",
    "BasePort": 8000,
    "ReceiveBufferSize": 8192,
    "SendBufferSize": 4096,
    "ConnectionTimeoutMs": 5000,
    "MaxReconnectAttempts": 3
  },
  "DataStorageSettings": {
    "DataPath": "BatteryTesterData",
    "FlushIntervalMs": 1000,
    "MaxBatchSize": 1000,
    "CompressData": false,
    "RetentionDays": 30
  },
  "DisplaySettings": {
    "RefreshIntervalMs": 100,
    "ChannelsPerPage": 32,
    "ShowRawData": false,
    "DateTimeFormat": "yyyy-MM-dd HH:mm:ss.fff"
  }
}